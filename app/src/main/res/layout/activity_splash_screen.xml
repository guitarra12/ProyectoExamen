<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySplashScreen"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/activity_splash_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="30sp"
        android:text="WELCOME TO ITESO PRODUCTS"
        android:textColor="@android:color/white"/>

    <ProgressBar
        android:id="@+id/activity_splash_screen_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_splash_screen_text"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>
</RelativeLayout>